<div class="row control-group">
<% if user_signed_in? %>
	<h1>Welcome, search for a movie!</h1>

	<%= form_tag(search_path, method: "get") do %>
	  <div class="form-group col-md-8 floating-label-form-group controls">
  	  <%= text_field_tag :q, nil, placeholder: 'Search', class: 'form-control' %>
	  </div>
	  <div class="col-md-4">
		  <%= submit_tag("Search", class: 'btn btn-default') %>
	  </div>
	<% end %>
<% else %>
	<h1>Welcome to the IMDB App!</h1>
<% end %>
</div>